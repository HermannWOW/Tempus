@model ClienteModel

@{
    ViewData["Title"] = "Editar clientes";
}

<div class="text-center">

    <h1 class="display-4">Editar cliente</h1>

</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id"/>
    
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente" maxlength="150" required>
    </div>

    <div class="form-group">
        <label for="cpf">Cpf</label>
        <input type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" asp-for="Cpf" class="form-control" placeholder="Digite o CPF do cliente" maxlength="11" required>
    </div>

    <div class="form-group">
        <label for="nascimento">Data de nascimento</label>
        <input type="date" asp-for="DataNascimento" class="form-control" placeholder="Digite a data de nascimento do cliente" required max="@DateTime.Now.ToString("yyyy-MM-dd")">
    </div>

    <div class="form-group">
        <label for="cadastro">Data de cadastro</label>
        <input type="date" asp-for="DataCadastro" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" placeholder="Digite a data de cadastro do cliente" readonly>
    </div>

    <div class="form-group">
        <label for="renda">Renda familiar</label>
        <input type="number" asp-for="RendaFamiliar" class="form-control" placeholder="Digite a renda familiar do cliente" min=0>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index">Voltar</a>
</form>