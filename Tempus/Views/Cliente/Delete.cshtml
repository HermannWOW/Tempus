@model ClienteModel
@{
    ViewData["Title"] = "Confirmação apagar o cliente";
}

<div class="text-center">

    <h3>Deseja apagar o registro selecionado? (@Model.Nome)</h3>

</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Cliente" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Cliente"  asp-action="Index">Cancelar exclusão</a>